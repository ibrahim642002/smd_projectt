<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/complaint_card_bg"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Title and Priority Badge -->
    <TextView
        android:id="@+id/tvComplaintTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street Light Not Working"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="100dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tvPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="High"
        android:textColor="@android:color/white"
        android:background="@drawable/priority_high"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="11sp"
        android:visibility="gone" />

    <!-- Location and User Info -->
    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvComplaintTitle"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <!-- Location -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_location_pin"
                app:tint="#666666" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Road, Block A"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- ID and User Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvComplaintId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#12345"
                android:textColor="#999999"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textColor="#999999"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_profile"
                app:tint="#999999" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmed Khan"
                android:textColor="#999999"
                android:textSize="11sp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Status and Actions -->
    <LinearLayout
        android:id="@+id/llActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llInfo"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textColor="@android:color/white"
            android:background="@drawable/status_pending"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="11sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnApprove"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Approve"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_approve"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="6dp" />

        <Button
            android:id="@+id/btnReject"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Reject"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_reject"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/tvView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:textColor="#6B73E8"
            android:textSize="12sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</RelativeLayout>