<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/complaint_card_bg"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Title and Status Badge -->
    <TextView
        android:id="@+id/tvComplaintTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street Light Not Working"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="120dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="In Progress"
        android:textColor="@android:color/white"
        android:background="@drawable/status_in_progress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="11sp" />

    <!-- Location -->
    <LinearLayout
        android:id="@+id/llLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvComplaintTitle"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_location_pin"
            app:tint="#666666" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Road, Block A"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Category -->
    <LinearLayout
        android:id="@+id/llCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvComplaintTitle"
        android:layout_toEndOf="@id/llLocation"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivCategoryIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_category"
            app:tint="#666666" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infrastructure"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- ID and Time -->
    <LinearLayout
        android:id="@+id/llIdTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llLocation"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvComplaintId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#12345"
            android:textColor="#999999"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" • "
            android:textColor="#999999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvTimeAgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 days ago"
            android:textColor="#999999"
            android:textSize="11sp" />

    </LinearLayout>

    <!-- View Details Button -->
    <TextView
        android:id="@+id/tvViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llLocation"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:text="View Details →"
        android:textColor="#6B73E8"
        android:textSize="12sp"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>