<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Purple Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6B73E8"
            android:padding="20dp"
            android:paddingBottom="32dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                app:tint="@android:color/white" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btnBack"
                android:layout_marginStart="8dp"
                android:text="Complaint Details"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Menu Icon -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_menu_dots"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                app:tint="@android:color/white" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnBack"
                android:layout_marginTop="16dp"
                android:text="In Progress"
                android:textColor="@android:color/white"
                android:background="@drawable/status_badge_transparent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="13sp" />

        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Complaint Info Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPLAINT INFO"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/complaint_card_bg"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvComplaintTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Street Light Not Working"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Complaint ID -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_id"
                            app:tint="#6B73E8" />

                        <TextView
                            android:id="@+id/tvComplaintId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complaint ID: #12345"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Category -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_category"
                            app:tint="#6B73E8" />

                        <TextView
                            android:id="@+id/tvCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category: Infrastructure"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location_pin"
                            app:tint="#6B73E8" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location: Main Road, Block A"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Submitted Date -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#6B73E8" />

                        <TextView
                            android:id="@+id/tvSubmittedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submitted: Oct 1, 2025"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <!-- Description Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:layout_marginTop="24dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/complaint_card_bg"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The street light on Main Road near Block A has been non-functional for the past week. This is causing safety concerns for residents during night time."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

                <!-- Attached Images -->
                <HorizontalScrollView
                    android:id="@+id/scrollImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDescription"
                    android:layout_marginTop="16dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/llAttachedImages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Sample Image 1 -->
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/placeholder_image"
                            android:scaleType="centerCrop"
                            android:background="@drawable/image_border"
                            android:layout_marginEnd="8dp" />

                        <!-- Sample Image 2 -->
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/placeholder_image"
                            android:scaleType="centerCrop"
                            android:background="@drawable/image_border" />

                    </LinearLayout>

                </HorizontalScrollView>

            </RelativeLayout>

            <!-- Status Timeline Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATUS TIMELINE"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:layout_marginTop="24dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/complaint_card_bg"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/llTimeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Timeline Item 1 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <!-- Timeline dot -->
                        <View
                            android:id="@+id/dot1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/timeline_dot_active"
                            android:layout_marginTop="4dp" />

                        <!-- Timeline line -->
                        <View
                            android:id="@+id/line1"
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:background="#DDDDDD"
                            android:layout_below="@id/dot1"
                            android:layout_alignStart="@id/dot1"
                            android:layout_marginStart="5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/dot1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In Progress"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 2, 2025 - 10:30 AM"
                                android:textColor="#999999"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <!-- Timeline Item 2 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <View
                            android:id="@+id/dot2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/timeline_dot_inactive"
                            android:layout_marginTop="4dp" />

                        <View
                            android:id="@+id/line2"
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:background="#DDDDDD"
                            android:layout_below="@id/dot2"
                            android:layout_alignStart="@id/dot2"
                            android:layout_marginStart="5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/dot2"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Under Review"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 1, 2025 - 03:15 PM"
                                android:textColor="#999999"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <!-- Timeline Item 3 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/dot3"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/timeline_dot_inactive"
                            android:layout_marginTop="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/dot3"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Submitted"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 1, 2025 - 09:00 AM"
                                android:textColor="#999999"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>