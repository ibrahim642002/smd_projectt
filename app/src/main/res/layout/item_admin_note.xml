<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/note_card_bg"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Note Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_admin"
            app:tint="#6B73E8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin Note"
            android:textColor="#6B73E8"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvNoteTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 11, 2025"
            android:textColor="#999999"
            android:textSize="11sp" />

    </LinearLayout>

    <!-- Note Content -->
    <TextView
        android:id="@+id/tvNoteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is an admin note regarding your complaint."
        android:textColor="#333333"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp" />

</LinearLayout>