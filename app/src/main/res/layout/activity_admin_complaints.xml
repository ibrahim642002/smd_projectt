<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Purple Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6B73E8"
                android:padding="20dp">

                <!-- Back Button -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@android:color/white" />

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/btnBack"
                    android:layout_marginStart="8dp"
                    android:text="All Complaints"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Filter Icon -->
                <ImageView
                    android:id="@+id/btnFilter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_filter"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@android:color/white" />

            </RelativeLayout>

            <!-- Category Filter Tabs -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tabAll"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="All"
                        android:textColor="@android:color/white"
                        android:background="@drawable/tab_selected"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tabInfrastructure"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Infrastructure"
                        android:textColor="#6B73E8"
                        android:background="@drawable/tab_unselected"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tabStreetLights"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Street Lights"
                        android:textColor="#6B73E8"
                        android:background="@drawable/tab_unselected"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tabGarbage"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Garbage"
                        android:textColor="#6B73E8"
                        android:background="@drawable/tab_unselected"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tabWater"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Water Supply"
                        android:textColor="#6B73E8"
                        android:background="@drawable/tab_unselected"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tabOther"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Other"
                        android:textColor="#6B73E8"
                        android:background="@drawable/tab_unselected"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Complaints Count -->
            <TextView
                android:id="@+id/tvComplaintsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Showing 156 complaints"
                android:textColor="#666666"
                android:textSize="14sp" />

            <!-- Complaints List -->
            <LinearLayout
                android:id="@+id/llComplaintsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <!-- Placeholder text when no complaints -->
                <TextView
                    android:id="@+id/tvNoComplaints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="64dp"
                    android:text="No complaints found"
                    android:textAlignment="center"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Dashboard Tab -->
        <LinearLayout
            android:id="@+id/navDashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dashboard"
                app:tint="#999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Dashboard"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Complaints Tab (Active) -->
        <LinearLayout
            android:id="@+id/navComplaints"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_list"
                app:tint="#6B73E8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Complaints"
                android:textColor="#6B73E8"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Users Tab -->
        <LinearLayout
            android:id="@+id/navUsers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="#999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Users"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Settings Tab -->
        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                app:tint="#999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Settings"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>